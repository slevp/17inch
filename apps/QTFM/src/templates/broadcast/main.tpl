<div class="header">
    <h1 class="title">广播电台</h1>
    <div class="header-search-bar">
        <div class="frame">
            <span class="icon"></span>
            <input class="text" placeholder="请输入电台名称或频道"/>
        </div>
        <span class="cancel-btn">取消</span>
    </div>
</div>
<div class="content">
    <div class="search-bar">
        <span class="icon"></span>
        <span class="text">搜索</span>
    </div>
    <ul class="categories">
        <li class="item all">
            <div class="icon"></div>
            <p class="label">所有</p>
        </li>
        <li class="item civil">
            <div class="icon"></div>
            <p class="label">国内台</p>
        </li>
        <li class="item international">
            <div class="icon"></div>
            <p class="label">国际台</p>
        </li>
    </ul>
    <div class="sub-categories">
        <ul class="scroller"></ul>
    </div>
</div>